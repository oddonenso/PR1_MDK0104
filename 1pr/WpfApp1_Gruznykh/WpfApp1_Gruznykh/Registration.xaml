<Window x:Class="WpfApp1_Gruznykh.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1_Gruznykh"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Логин:" Margin="10"/>
            <TextBox x:Name="tbNewLogin" Margin="10"/>
            <TextBlock Text="Пароль:" Margin="10"/>
            <TextBox x:Name="tbNewPassword" Margin="10"/>
            <Button Content="Зарегистрироваться" x:Name="btnRegisterUser" Click="btnRegisterUser_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
